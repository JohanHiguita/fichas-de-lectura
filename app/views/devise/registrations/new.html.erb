<body class="text-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= render "layouts/alerts" %>
 
    <%= devise_error_messages! %>
  

  <%= image_tag("book-logo.png", width: '200', height: '200', class: "mb-4") %>

  <h1 class="h3 mb-3 font-weight-normal">Regístrate</h1>

  <label for="inputEmail" class="sr-only">Correo electrónico</label>

  <%= f.email_field :email, id: "inputEmail", class: "form-control", placeholder: "Email", autofocus: true %>

  <br>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
  <% end %><br />

  <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Contraseña" %>

  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirme contraseña" %>



  <%= f.submit "Registrarse", class: "btn btn-lg btn-primary btn-block" %>

  <%= render "devise/shared/links" %>
  <p class="mt-5 mb-3 text-muted">&copy; 2018-2019</p>
  <% end %>
</body>
