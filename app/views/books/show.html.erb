<div class="container">
	<%= render "layouts/alerts" %>
	<%= link_to books_path, class: "btn btn-lg btn-back", title: "Atrás" do %>
	<i class="fa fa-arrow-circle-left back-icon"></i>
	<% end %>
	<h1><%= @book.title.upcase%></h1>
	<h4>Autor: <%= @autor %></h4>
	<p><b>Ciudad:</b> <%= @book.city.capitalize %></p>
	<p><b>Editorial:</b> <%= @book.editorial.capitalize %></p>
	<p><b>Temas:</b>
		<% @topics.each do |topic| %>
		<span><%= topic.name.capitalize %>, </span>
		<% end %> 
	</p>
	<p>
		<h3>Citas textuales</h3>
		<ul>
			<% @cites.each do |cite| %>
			<li><em><q><%= cite.content %></q>	</em></li>
			<% end %>
		</ul>
		<%= link_to new_book_path, class: "btn btn-sm btn-outline-success", title: "Agregar cita" do %>
		<span data-feather='plus' ></span>Ingresar cita 
		<% end %>
	</p>
	
	<p>
		<h3>Notas personales</h3>
		<% if @book.notes %>
		<p class="personal-notes"><%= markdown(@book.notes) %></p>
		<% else %>
		<p class="personal-notes"><%= @book.notes %></p>
		<% end %>
	</p>
	
	<div class="btn-group btn-group-sm" role="group">

		<%= link_to "Editar", edit_book_path(@book), class: "btn btn-warning btn-sm", title: "Editar" %>
		<%= link_to "Eliminar",  book_path(@book), method: :delete, data: {confirm: "¿Confirma eliminar el registro del libro '#{@book.title}'?"}, class: "btn btn-danger btn-sm", title: "Eliminar" %>
	</div>
</div>	