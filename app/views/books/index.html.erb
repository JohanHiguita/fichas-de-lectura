<div class="container">
	<table id="example" class="table table-striped table-bordered" style="width:100%">
		<thead>
			<tr>
				<th>Título</th>
				<th>Autor</th>
				<th>Temas</th>
				<th>Opciones</th>

			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<%#= byebug %>
				<td><%= book.title %></td>
				<td><%= book.autor.name1 %>
					<%= book.autor.name2 %>
					<%= book.autor.lastname1 %>
					<%= book.autor.lastname2 %>
				</td>
				<td><%= ((book.topics).map{ |x| x.name }).join(", ") %></td>
				<td class="crud-td">
					<i class="fa fa-eye watch" title="Ver ficha completa"></i>
					<i class="fa fa-edit edit" title= "Editar"></i>
					<i class="fa fa-trash delete" title="Eliminar"></i>
				</td>

			</tr>
			<% end %>

		</tbody>
		<tfoot>
			<tr>
				<th>Título</th>
				<th>Autor</th>
				<th>Temas</th>
				<th>Opciones</th>
			</tr>
		</tfoot>
	</table>
</div>

