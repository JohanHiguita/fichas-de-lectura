
<br><br>
<div class="container">
	<%= render "layouts/alerts" %>
	<table id="example" class="table table-striped table-bordered" style="width:100%">
		<thead>
			<tr>
				<th>Título</th>
				<th>Autor</th>
				<th>Temas</th>
				<th class="hd-opciones">Opciones</th>

			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= book.title.upcase %></td>
				<td><%= render "autor_fullname", book: book %></td>
				<td><%= ((book.topics).map{ |x| x.name }).join(", ") %></td>
				<td class="crud-td">
					<div class="btn-group btn-group-sm" role="group">
						<%= link_to book_path(book), class: "btn btn-primary btn-sm",title:"Ver ficha completa" do%>
						<span data-feather="eye"></span>
						<% end %>

						<%= link_to edit_book_path(book), class: "btn btn-warning btn-sm", title: "Editar" do %>
						<span data-feather="edit"></span>
						<% end %>

						<%= link_to  book_path(book), method: :delete, data: {confirm: "¿Confirma eliminar el registro del libro '#{book.title}'?"}, class: "btn btn-danger btn-sm", title: "Eliminar" do%>
						<span data-feather="x-circle"></span>

						<% end %>
					</div>
				</td>

			</tr>
			<% end %>

		</tbody>
		<tfoot>
			<tr>
				<th>Título</th>
				<th>Autor</th>
				<th>Temas</th>
				<th>Opciones</th>
			</tr>
		</tfoot>
	</table>
</div>